{
  "name": "G4s Now!",
  "short_name": "G4s Now!",
  "description": "Checks for GeForce Now compatibility when browsing steam",
  "version": "0.1",
  "author": "Philipp Mei√üner <pm@zeit.dev>",
  "homepage_url": "https://philippmeissner.dev",
  "manifest_version": 2,
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "web_accessible_resources": [
    "assets/gfn.json",
    "assets/cross.svg",
    "assets/check.svg"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://store.steampowered.com/app/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "./externals/jquery-3.4.1.min.js",
        "content_script.js"
      ]
    }
  ]
}
